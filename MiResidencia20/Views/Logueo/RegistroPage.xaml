<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiResidencia20.Views.RegistroPage" Title="Registrar Usuario">
    <StackLayout Padding="30,90">
 
        <Label Text="Usuario"/>
        <Frame><Entry Placeholder="Nombre de Usuario" Keyboard="Text"/></Frame>
      
        <Label Text="Semestre"/>
        <Frame><Entry Placeholder="Semestre 0" Keyboard="Numeric"/> </Frame>
  
        <Label Text="Grupo"/>
        <Frame><Entry Placeholder="Grupo" Keyboard="Text"/></Frame>
        
        <Label Text="Periodo"/>
        <Frame><Entry Placeholder="ENE-JUN/2020" Keyboard="Text"/></Frame>

          <StackLayout Padding="90,30">
            <Button Text="Registrarse" Clicked="Btn_Registrar"/>
          </StackLayout>
        
    </StackLayout>


</ContentPage>
