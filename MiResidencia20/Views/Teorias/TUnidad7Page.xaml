                      <Image Source="teoriau7_img7.png" Aspect="AspectFill"></Image>
                      <Image Source="teoriau7_img8.png" Aspect="AspectFill"></Image>
                      
                      <!-- Recta perpendicular y paralelas-->
                      <Image Source="teoriau7_img9.png" Aspect="AspectFill"></Image>
                      <Image Source="teoriau7_img10.png" Aspect="AspectFill"></Image>
                      <Image Source="teoriau7_img11.png" Aspect="AspectFill"></Image>
                      <Image Source="teoriau7_img12.png" Aspect="AspectFill"></Image>
                  </StackLayout>
